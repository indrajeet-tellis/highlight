# Highlight.io Dokploy Deployment Environment Variables

# --- AUTHENTICATION ---
# The password you'll use to log in (any email address works)
ADMIN_PASSWORD=password
JWT_ACCESS_SECRET=generate-a-random-secret-here

# --- NETWORKING ---
# Replace your-domain.com with your actual domain
REACT_APP_FRONTEND_URI=https://highlights.always.click
REACT_APP_PRIVATE_GRAPH_URI=https://highlights.always.click/private
REACT_APP_PUBLIC_GRAPH_URI=https://highlights.always.click/public
REACT_APP_OTLP_ENDPOINT=https://highlights.always.click/otel

# Internal networking (Defaults for the consolidated compose)
CLICKHOUSE_ADDRESS=clickhouse:9000
KAFKA_SERVERS=kafka:9092
PSQL_HOST=postgres
PSQL_PORT=5432
REDIS_EVENTS_STAGING_ENDPOINT=redis:6379
OTLP_ENDPOINT=http://collector:4318

# --- DATABASE CONFIG ---
CLICKHOUSE_DATABASE=default
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
PSQL_DB=postgres
PSQL_USER=postgres
PSQL_PASSWORD=
REDIS_PASSWORD=redispassword

# --- SYSTEM SETTINGS ---
ON_PREM=true
IN_DOCKER=true
IN_DOCKER_GO=true
ENVIRONMENT=prod
SSL=true
DOPPLER_CONFIG=docker
OBJECT_STORAGE_FS=/highlight-data
SESSION_FILE_PATH_PREFIX=/tmp/
TZ=UTC
GOMEMLIMIT=16GiB
